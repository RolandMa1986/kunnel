    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "args": ["--server", "ws://localhost:80", "--local", "localhost:8000"],
            "program": "${file}"
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "args": ["--host", "0.0.0.0", "--port", "80", "--domain", "gozry.com"],
            "program": "${file}"
        }

    ]
}